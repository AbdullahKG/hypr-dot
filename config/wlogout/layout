    "label": "logout",
    "action": "$HOME/.config/hypr/scripts/power.sh --logout",
    "text": "Logout",
    "keybind": "e"
}

{
    "label": "suspend",
    "action": "lockscreen.sh & disown && systemctl suspend",
    "text": "Suspend",
    "keybind": "u"
}

{
    "label": "hibernate",
    "action": "systemctl hibernate",
    "text": "Hibernate",
    "keybind": "h"
}

{
